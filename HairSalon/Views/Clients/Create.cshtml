@{
  Layout ="_Layout";
}
@using HairSalon.Models;

@model HairSalon.Models.Client

<h1>Add a new Client</h1>
  @using (Html.BeginForm())
{
  @Html.LabelFor(model =>model.Name)
  @Html.TextBoxFor(model =>model.Name)
  @Html.LabelFor(model =>model.Wax)
  @Html.TextBoxFor(model =>model.Wax)
  @Html.LabelFor(model =>model.Massage)
  @Html.TextBoxFor(model =>model.Massage)
  @Html.LabelFor(model => model.Stylist)
